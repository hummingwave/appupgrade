<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/upgrade_background_curved"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_15"
        android:focusable="false"
        android:gravity="center"
        android:text="@string/upgrade_heading"
        android:textColor="@color/upgrade_dark_grey"
        android:textSize="@dimen/txt_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_update_now"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/upgrade_update_now"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/txt_size_16"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_remind_me_later"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/upgrade_update_later"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/txt_size_16"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_dont_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <CheckBox
            android:id="@+id/checkbox_dont_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.70"
            android:scaleY="0.70" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_40"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/upgrade_dont_show"
            android:textColor="@color/upgrade_dark_grey"
            android:textSize="@dimen/txt_size_16" />
    </LinearLayout>

</LinearLayout>